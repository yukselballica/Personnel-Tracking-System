<%- include("partials/_header") -%>
    <%- include("partials/_sidebar") -%>


        <div class="main-wrapper login-body">
            <div class="login-wrapper">
                <div class="container">

                    <img class="img-fluid logo-dark mb-2" src="assets/img/logo.jpg" alt="Logo">

                    <div class="loginbox">

                        <div class="login-right">

                            <div class="login-right-wrap">
                                <h1>Update</h1>
                                <p class="account-subtitle">Access to our dashboard</p>

                                <form action="/salary-update" method="post">
                                    <div class="form-group">
                                        <label class="form-control-label">Name</label>
                                        <input name="name" value="<%=users.name%>" class="form-control" type="text">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-control-label">Email Address</label>
                                        <input name="email" value="<%=users.email%>" class="form-control" type="text">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-control-label">Salary</label>
                                        <input name="salary" value="<%=users.salary%>" class="form-control" type="text">
                                    </div>
                                    <div class="form-group mb-0">
                                        <button class="btn btn-lg btn-block btn-primary" type="submit">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include("partials/_footer.ejs") -%>